{
    "manifest_version": 2,
    "name": "seimani-sshot",
    "description": "政剣マニフェスティアのスクリーンショットを簡単に撮影できます。",
    "version": "1.1",
    "icons": {
        "128": "images/icons/icon_128.png"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "options_page": "options.html",
    "page_action": {
        "default_icon": {
            "38": "images/icons/icon_38.png"
        },
        "default_title": "スクリーンショットを撮影する"
    },
    "background": {
        "scripts": [ "js/background.js" ],
        "persistant": false
    },
    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+S"
            }
        }
    },
    "permissions": [
        "tabs",
        "downloads",
        "declarativeContent",
        "storage",
        "http://www.dmm.com/netgame/social/-/gadgets/=/app_id=763917/",
        "http://d3vhzwqidpn2dk.cloudfront.net/seimani/*"
    ]
}
